
<h2 class="text-center"><%= @location.address -%> </h2>

<div class="well row">

  <div class="col-md-8" id="location-show">
    <table class="table table-bordered table-striped" >
      <thead>
        <tr>
          <th>Latitude</th>
          <th>Latitude</th>
          <th>Address</th>
          <th>Description</th>
          <th>Update Picture</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @location.latitude %></td>
          <td><%= @location.longitude %></td>
          <td><%= @location.address %></td>
          <td><%= @location.description %></td>
          <td><%= link_to "Edit Location", edit_location_path(@location), class:"btn btn-default" %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-md-4" id="loc-pic-opration-button">
    <%= link_to "Add New Picture", new_location_picture_path(@location), class: "btn btn-default" -%>
    <%= link_to 'Back To List Of Location', locations_path, class:"btn btn-default" %>
  </div>

</div>

<hr>

<div class="location-picture-show">
  <div class="col-md-8" id="location-map">
    <%= render partial: 'gmap4rails' %>
  </div>

  <div id="location-pictures-details" class="col-md-4">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Picture Name</th>
          <th>Action On Picture</th>

        </tr>
      </thead>
      <tbody>
        <% @location.pictures.each do |picture| %>
        <tr>
          <td><%= image_tag(picture.name_url) if picture.name? %></td>
          <td><%= link_to "Edit Picture", edit_location_picture_path(@location, picture), class: "btn btn-primary btn-sm" -%><hr>
          <%= link_to "Delete Picture", location_picture_path(@location, picture) , method: :delete, data: {confirm: "Are you sure to delete #{picture.name} picture"} ,class: "btn btn-danger btn-sm"%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
